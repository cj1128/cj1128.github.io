.header
  display: flex
  flex-shrink: 0
  align-items: center
  padding: 10px 25px

.header__avatar
  width: 40px

.header__nav
  margin-left: auto
  > a
    cursor: pointer
    margin-right: 60px
    color: $main-color
    &:hover
      color: $active
    &.active
      color: $active
    &.disabled
      cursor: not-allowed
      color: #D1CACA
      &:hover
        color: #D1CACA

.header__search
  display: flex
  align-items: center
  margin-left: 30px
  border-left: solid 1px rgba(0,0,0,0.1)
  padding-left: 30px
  > img
    margin-right: 20px
  > input
    font-size: 12px
    border: none
    background: transparent
    outline: none

.header__search__box
  display: none
  box-shadow: 0 0 3px $active
  position: absolute
  width: 280px
  top: 65px
  left: 40px
  background: white
  z-index: 9999
  padding: 20px
  list-style: none
  margin: 0
  border-radius: 5px
  &:before
    content: ''
    display: block
    position: absolute
    width: 0
    height: 0
    left: 50%
    margin-left: -10px
    top: -10px
    border-left: solid 10px transparent
    border-right: solid 10px transparent
    border-bottom: solid 15px white
  > li
    padding-bottom: 20px
    border-bottom: solid 1px $border-gray
    margin-bottom: 25px
    font-size: 12px
    &:last-child
      margin-bottom: 0
    a
      color: #9b9b9b
      &:hover
        color: $main-blue

@media (max-width: 750px)
  .header__search
  .header__nav
    display: none
  .header > a
    margin: auto
