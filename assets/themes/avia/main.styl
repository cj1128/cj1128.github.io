@import "../../vendors/normalize.css"
@import "../../vendors/code_highlight/tomorrow.css"
@import "./markdown.css"

$main-color = #666
$main-black = #444A59
$active = #0BB304
$li-active = #58975F
$bg = #e2e2e2
$border-gray = #E2E2E2
$main-blue = #4A90E2

$font-family = "Open Sans", Helvetica, Tahoma, Arial, "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", STXihei, "华文细黑" , SimSun, "宋体", Heiti, "黑体", sans-serif

a
  text-decoration: none

html
  background: $bg
  color: $main-color
  font-size: 14px
  font-family: $font-family
  padding: 0 1px
  height: 100%
body
  height: 100%
  display: flex
  flex-direction: column

.copy-code-btn
  cursor: pointer
  position: absolute
  top: 0
  right: 0
  color: $active
.highlight
  position: relative

post-container()
  padding: 30px
  background: white
  box-shadow: 0 2px 10px #9B9B9B
  width: 720px
  box-sizing: border-box
  margin: auto

post()
  .post__title
    display: block
    margin-bottom: 30px
    font-size: 20px
    color: $main-black
    font-weight: 600
    line-height: 24px
    &:hover
      color: $main-blue
  .post__meta
    display: flex
    margin: 20px 0
    font-size: 12px
    .date
      color: #9B9B9B
      margin-left: auto
      padding-right: 25px
      border-right: solid 1px $border-gray
    .tags
      margin-left: 25px
      color: #FF5916

.header
  display: flex
  flex-shrink: 0
  align-items: center
  padding: 10px 25px
  .header__avatar
    width: 40px
  .header__nav
    margin-left: auto
    #page-apps
      color: #D1CACA
      &:hover
        color: #D1CACA
    a
      cursor: pointer
      margin-right: 60px
      color: $main-color
      &:hover
        color: $active
      &.active
        color: $active
  .header__search
    display: flex
    align-items: center
    margin-left: 30px
    border-left: solid 1px rgba(0,0,0,0.1)
    padding-left: 30px
    > img
      margin-right: 20px
    > input
      font-size: 12px
      border: none
      background: transparent
      outline: none
    .header__search__box
      display: none
      box-shadow: 0 0 3px $active
      position: absolute
      width: 280px
      top: 65px
      left: 40px
      background: white
      z-index: 9999
      padding: 20px
      list-style: none
      margin: 0
      border-radius: 5px
      &:before
        content: ''
        display: block
        position: absolute
        width: 0
        height: 0
        left: 50%
        margin-left: -10px
        top: -10px
        border-left: solid 10px transparent
        border-right: solid 10px transparent
        border-bottom: solid 15px white
      > li
        padding-bottom: 20px
        border-bottom: solid 1px $border-gray
        margin-bottom: 25px
        font-size: 12px
        &:last-child
          margin-bottom: 0
        a
          color: #9b9b9b
          &:hover
            color: $main-blue

.page-index
  flex: 1
  display: flex
  height: calc(100% - 60px)
  .index__categories
    padding: 0
    line-height: 40px
    list-style: none
    color: #8f9392
    font-size: 11px
    a
      color: #8F939C
      display: block
      padding-left: 40px
      cursor: pointer
      &:hover
        color: $main-black
      &.active
        color: $main-black
        border-left: solid 4px $active
  .index__posts-wrapper
    flex: 1
    max-height: 100%
    overflow: auto
    .index__posts
      post-container()
      line-height: 30px
      .post
        border-bottom: solid 1px $border-gray
        margin-bottom: 40px
        post()

.page-post
  post-container()
  post()
  width: 800px
  font-size: 16px
  line-height: 40px
  .post__title
    font-size: 24px
    font-weight: 400
  .post__comments
    margin-top: 40px
    padding-top: 40px
    border-top: solid 1px $border-gray

.page-about
  margin-top: 120px
  margin-left: 500px
  width: 500px
  > header
    margin: 40px 0
    > h1
      margin: 0
    > a
      color: $main-color
      display: block
      font-size: 12px
      text-align: right
      margin-top: 10px
  .page-about__cover
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: url(/assets/images/bg.jpg) no-repeat 0 0 / cover
    z-index: -1
    &:before
      content: ""
      display: block
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: rgba(0,0,0,0.3)
  .page-about__title
    font-size: 60px
    font-weight: 700
    line-height: 82px
    color: white
  .page-about__content
    color: white
