.page-about
  max-width: 500px
  padding: 0 20px
  margin: auto
  > header
    margin: 40px 0
    > h1
      margin: 0
    > a
      color: $main-color
      display: block
      font-size: 12px
      text-align: right
      margin-top: 10px

.page-about__cover
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: url(/assets/images/bg.jpg) no-repeat 0 0 / cover
  z-index: -1
  &:before
    content: ""
    display: block
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
    background: rgba(0,0,0,0.3)

.page-about__title
  font-size: 60px
  font-weight: 700
  line-height: 82px
  color: white

.page-about__content
  color: white
